<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
	<div class="gameover">
		<h1>Cassandra</h1>
		<h2>
			<fest:value>json.name</fest:value>,
			Game Over!
		</h2>

		<h3>How much points do you want?</h3>
		<form class="gameover__form" method="post">
			<p>
				<input class="gameover__input" type="text" name="score" required="required" value="1" />
			</p>
			<button type="submit" class="gameover__submit">Submit</button>
			<a href="#" class="menu__button">Menu</a>
		</form>
	</div>
</fest:template>
