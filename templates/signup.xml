<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="signup">
		<h1>Cassandra</h1>
		<h2>Sign up</h2>
		
		<form class="signup__form" method="post">
			<p>
				<label for="username">
					Username:</label> 
				<input type="text"
					id="username" required="required"
					pattern="^[A-z0-9]*$" title="No special characters">
				</input>
			</p>
			<p>
				<label for="email">Email:</label> 
				<input type="email" id="email" required="required" />
			</p>
			<p>
				<label for="passw">Password:</label>
				<input type="password" id="passw" required="required" />
			</p>
			<p>
				<label for="passw">Confirm password:</label> 
				<input type="password" id="passw" required="required" />
			</p>
			<button type="submit" class="signup__form-submit">Submit</button>
		</form>
		
		<div class="menu">
			<a href="#" class="menu__button">Back</a>
		</div>
	</div>
</fest:template>
