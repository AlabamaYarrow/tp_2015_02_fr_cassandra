<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">


	<div class="menu">
		<h1>Cassandra</h1>				
		<h2 class="menu__header">			
			<fest:if test="json.loggedIn == true">
				Hello, <fest:space/> <fest:value>json.name</fest:value>! 
			</fest:if>
			<fest:if test="json.loggedIn == false">
				Please login or signup
			</fest:if>
		</h2>		
		<div class="menu__buttonpanel">
			<a href="#scoreboard" class="menu__button">Scoreboard</a>
			<fest:if test="json.loggedIn == true">
				<a href="#game" class="menu__button">Start game</a>
				<a href="#logout" class="menu__button">Logout</a>
			</fest:if>
			<fest:if test="json.loggedIn == false">				
				<a href="#login" class="menu__button">Login</a>		
				<a href="#signup" class="menu__button">Sign up</a>
			</fest:if>
		</div>
	</div>

</fest:template>
