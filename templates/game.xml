<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
	<div id="game" class="js-game game">

		<fest:choose>
		    <fest:when test="json.role == 'artist'">
		        <h3 class="game__header">
		        	Draw the word: <fest:space/> <fest:value>json.secret</fest:value>
		        </h3>

		    </fest:when>

		    <fest:when test="json.role == 'cassandra'">
		        <h3 class="game__header">Guess the word</h3>
		    </fest:when>

		    <fest:otherwise>
		       	<h3 class="game__header">Enjoy the game</h3>
		    </fest:otherwise>
		</fest:choose>
		
		<div class="js-gameplayground game__playground">
			<div class="js-paintarea paintarea">
				<canvas id="canvas" class="js-canvas paintarea__canvas"></canvas>
			</div>
			<div class="userschat">
			</div>
		</div>

		<div class="game__controlpanel">
			<fest:choose>
				<fest:when test="json.role == 'artist'">
					<button class="js-buttonclear game__button">Clear</button>
					<span class="game__paneltext"> Color: <fest:space/> </span>
					<input class="js-buttoncolor game__colorselect" type="color" name="favcolor"></input>
					<span class="game__paneltext"> Line width: <fest:space/> </span>
					<input class="js-widthselect game__widthselect" type="range" name="points" min="1" max="50"></input>	
				</fest:when>
				<fest:otherwise>
					<p>Place for advertisement</p>
				</fest:otherwise>
			</fest:choose>			
		</div>

		<div class="game__guesspanel">
			<fest:choose>
				<fest:when test="json.role == 'artist'">
					<button class="js-buttonguess game__button">Cassandra guessed!</button>	
				</fest:when>
				<fest:otherwise>
					<p>Place for advertisement</p>
				</fest:otherwise>
			</fest:choose>
		</div>
				
		<a href="#" class="game__menubutton">Back</a>
		<h3 class="game__header" style="margin-left: 0px; width: 30%;">Other player's canvas:</h3>
		<div class="paintarea">
			<canvas class="js-canvas2 paintarea__canvas"></canvas>
		</div>

	</div>
</fest:template>
