<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
	<div id="game" class="game">
		
		<h3>Current word: AJAX</h3>
		<div class="game__playground">
			<div class="js-paintarea paintarea">
				<canvas id="canvas" class="js-canvas paintarea__canvas"></canvas>
			</div>
			<div class="userschat">
				<div class="users">
					<h3> Users: </h3>
					<p> 
						Ivan <b>: Artist</b> <br/> 
						Petr <b>: Judge</b> <br/> 
						Vladislav <b>: Cassandra</b>
					</p>
				</div>
				<div class="chat">
					<div class="chat__area">
						<p class="chat__message">Vladislav: It's Ajax!</p>
					</div>		
					<div>			
						<input class="chat__input"></input>
						<button class="chat__button">Send</button>
					</div>
				</div>
			</div>
		</div>
		<div>
			<div class="game__panelpaint">
				<button class="js-buttonclear game__button">Clear</button>
				<button class="js-buttoncolor game__button">Color</button>
				<button class="js-buttonwidth game__button">Width</button>			
			</div>
			<div class="game__panelguess">		
				<button class="js-buttonguess game__button">Cassandra guessed!</button>			
			</div>
		</div>
		<h3>Time left: 00:07</h3>
		<div class="menu">
			<a href="#" class="menu__button">Back</a>
		</div>
	</div>
</fest:template>
